
@{
    /**/

    /**/

    ViewBag.Title = "Sign Up";
}
<div class="container">
    <h2>Sign Up</h2>


    @using (Html.BeginForm("SignUp", "User", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
    {

        <div class="form-group">

            <label class="control-label" for="txtEmailId">Enter User Email Id:</label>

            @Html.TextBox("txtEmailId", "", htmlAttributes: new { @class = "form-control" })

        </div>




        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="control-label">Enter User Name:</label>
                    @Html.TextBox("txtUserName", "", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-4">

                <div class="form-group">
                    <label class="control-label">Enter User Mobile Number:</label>
                    @Html.TextBox("txtMobile", "", htmlAttributes: new { @class = "form-control" })
                </div>


            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">

                <div class="form-group">
                    <label class="control-label">Enter User Password:</label>
                    @Html.Password("txtPassword", "", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-4">

                <div class="form-group">
                    <label class="control-label">Confirm Password:</label>
                    @Html.Password("txtConfirmPassword", "", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-4">

                <div class="form-group">
                    <label class="control-label">Country:</label>

                    @Html.DropDownList("ddlCountry",(new List<SelectListItem>() {

                            new SelectListItem(){ Text="India",Value="IN"},

                            new SelectListItem(){ Text="USA",Value="USA"}

                    }),"Select Country",htmlAttributes:new { @class = "form-control"})

                </div>
            </div>
            <div class="col-lg-4">

                <div class="form-group">
                    <label class="control-label">State:</label>

                    @Html.DropDownList("ddlState",(new List<SelectListItem>() {

                            new SelectListItem(){ Text="India",Value="IN"},

                            new SelectListItem(){ Text="USA",Value="USA"}

                    }),"Select Country",htmlAttributes:new { @class = "form-control"})
                </div>
            </div>
            <div class="col-lg-4">

                <div class="form-group">
                    <label class="control-label">City:</label>

                    @Html.DropDownList("ddlCity",(new List<SelectListItem>() {

                            new SelectListItem(){ Text="India",Value="IN"},

                            new SelectListItem(){ Text="USA",Value="USA"}

                    }),"Select Country",htmlAttributes:new { @class = "form-control"})
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Gender:</label>
            @Html.RadioButton("Gender", "Male", true) Male
            @Html.RadioButton("Gender", "Female", true) Female
        </div>

        <div class="form-group">
            <label class="control-label">Hobbies:</label>
            @Html.CheckBox("Hobby", false, htmlAttributes: new { @value = "Cricket" }) Cricket
            @Html.CheckBox("Hobby", false, htmlAttributes: new { @value = "Study" }) Study
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }

